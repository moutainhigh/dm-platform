interface ValueObject {
}
class ProductAggregate {
    - productId: ProductId
    - name: String
    - image: String
    - price: Long
    - verifyState: ReviewState
    - productState: ProductState
    - removed: Boolean
    - inventory: Integer
    - model: ProductModel
    - type: ProductType
    - canReturn: Boolean
    - category: String
    - brand: String
    - warehouse: String
    - supplier: String
    - h5Detail: Text
    - saleVolume: Integer
    - deliveryRegion: String
    - desc: String

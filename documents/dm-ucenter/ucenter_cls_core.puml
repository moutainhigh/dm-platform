}

enum ReviewState {
    + AUDITING
    + APPROVED
    + REJECTED
}
enum ProductState {
    + DRAFT
    + FORSALE
    + ONSALE
    + INSTOCK
}
ProductAggregate <--o SkuAggregate
Specification --> SkuAggregate
Specification --|> ValueObject


@startuml 订单管理

class TradeAggregate {
    - tradeId: TradeId
    - address: DeliveryAddress
    - buyerId: UserId
    - sellerId: MerchantId
    - orders: Collection
}
class OrderAggregate {
    - orderId: OrderId
    - tradeId: TradeId
    - orderItems: Collection
    - state: SwitchState
    - tenantId: TenantId
}
class OrderItemAggregate {
    - orderItemId: OrderItemId
    - orderId: OrderId
    - tradeId: TradeId
    - state: SwitchState
    - tenantId: TenantId
}

TradeAggregate "1"--*"*" OrderAggregate
OrderAggregate "1"--*"*" OrderItemAggregate

@enduml